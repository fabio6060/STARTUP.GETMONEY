@model List<ContaBancaria>

@{
    ViewBag.Title = "Conta Bancária";
}

@if (Model.Count == 0)
{
    <h1>Sem produtos...</h1>
}
else
{
    <h1>Com produtos...</h1>
    <form asp-action="RemoverContasBancarias" method="post">
    @foreach (ContaBancaria p in Model)
    {
        <div class="card">
            <div class="card-body bg-light">
                <p><b>Nome despesa: </b>@p.NomeTitular</p>
                <p><b>Quantidade: </b>@p.Saldo</p>
                <p><b>Valor: </b>
                    @if (p.Ativa)
                    {
                        @:Sim
                    }
                    else
                    {
                        @:Não
                    }
                </p>

            </div>
        </div>

    }
        <input type="submit" class="btn btn-warning" value="Remover Contas Bancarias" />
    </form>
    
}

<div>
    <a asp-action="Index" class="btn btn-primary">Voltar às Contas</a>
    <a asp-action="NovaContaBancaria" class="btn btn-primary">Criar Nova Conta Bancaria</a>
</div>
